<controls:KeyboardView x:Class="JuliusSweetland.OptiKey.UI.Views.Keyboards.Common.Minecraft"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:properties="clr-namespace:JuliusSweetland.OptiKey.Properties"
                       xmlns:controls="clr-namespace:JuliusSweetland.OptiKey.UI.Controls"
                       xmlns:models="clr-namespace:JuliusSweetland.OptiKey.Models"
                       xmlns:enums="clr-namespace:JuliusSweetland.OptiKey.Enums"
                       xmlns:valueConverters="clr-namespace:JuliusSweetland.OptiKey.UI.ValueConverters"
                       xmlns:resx="clr-namespace:JuliusSweetland.OptiKey.Properties"
                       mc:Ignorable="d" 
                       d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/OptiKey;component/Resources/Icons/KeySymbols.xaml" />
                <ResourceDictionary>
                    <valueConverters:IntToSingularPluralStringFormatter x:Key="IntToSingularPluralStringFormatter" />
                    <valueConverters:WidthGreaterThanHeight DefaultValue="True" x:Key="WidthGreaterThanHeight" />
                    <valueConverters:MinimiseAndDockPositionToSymbolOrientation x:Key="DockPositionToSymbolOrientation" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ContentControl Background="{DynamicResource KeyDefaultBackgroundBrush}"
                    Grid.IsSharedSizeScope="True">
        <ContentControl.Style>
            <Style TargetType ="{x:Type ContentControl}">
                <Setter Property="Content">
                    <Setter.Value>
                        <!--Keyboard is landscape-->
                        <ContentControl>
                            <ContentControl.Style>
                                <Style TargetType ="{x:Type ContentControl}">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <!--Normal landscape view-->
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <controls:Key Grid.Row="0" Grid.Column="0"
                                                                      SymbolGeometry="{StaticResource UpArrowKeyIcon}"
                                                                      Text="{x:Static resx:Resources.MINECRAFT_FWD}"
                                                                      SharedSizeGroup="KeyWithSymbolAndText">
                                                    <controls:Key.Value>
                                                        <models:KeyValue FunctionKey="{x:Static enums:FunctionKeys.WKeyToggle}" />
                                                    </controls:Key.Value>
                                                </controls:Key>                                                

                                                <controls:Key Grid.Row="1" Grid.Column="0"
                                                                      Text="{x:Static resx:Resources.MINECRAFT_JUMP}"
                                                                      SharedSizeGroup="KeyWithText">
                                                    <controls:Key.Value>
                                                        <models:KeyValue FunctionKey="{x:Static enums:FunctionKeys.SpaceToggle}" />
                                                    </controls:Key.Value>
                                                </controls:Key>
                                                <controls:Key Grid.Row="2" Grid.Column="0"
                                                                      SymbolGeometry="{StaticResource DownArrowKeyIcon}"
                                                                      Text="{x:Static resx:Resources.MINECRAFT_BWD}"
                                                                      SharedSizeGroup="KeyWithSymbolAndText">
                                                    <controls:Key.Value>
                                                        <models:KeyValue FunctionKey="{x:Static enums:FunctionKeys.SKeyToggle}" />
                                                    </controls:Key.Value>
                                                </controls:Key>

                                                <controls:Key Grid.Row="0" Grid.Column="1"
                                                                      SharedSizeGroup="KeyWithSymbolAndText">
                                                </controls:Key>
                                                <controls:Key Grid.Row="1" Grid.Column="1"
                                                                      SharedSizeGroup="KeyWithSymbolAndText">
                                                </controls:Key>
                                                <controls:Key Grid.Row="2" Grid.Column="1"
                                                                      SharedSizeGroup="KeyWithSymbolAndText">
                                                </controls:Key>

                                                <controls:Key Grid.Row="0" Grid.Column="2"
                                                                      SharedSizeGroup="KeyWithSymbolAndText">
                                                </controls:Key>
                                                <controls:Key Grid.Row="1" Grid.Column="2"
                                                                      SharedSizeGroup="KeyWithSymbolAndText">
                                                </controls:Key>
                                                <controls:Key Grid.Row="2" Grid.Column="2"
                                                                      SharedSizeGroup="KeyWithSymbolAndText">
                                                </controls:Key>

                                                <controls:Key Grid.Row="0" Grid.Column="3"
                                                                      SharedSizeGroup="KeyWithSymbolAndText">
                                                   
                                                </controls:Key>
                                                <controls:Key Grid.Row="1" Grid.Column="3"
                                                                      SharedSizeGroup="KeyWithSymbolAndText">
                                                   
                                                </controls:Key>
                                                <controls:Key Grid.Row="2" Grid.Column="3"
                                                                      SharedSizeGroup="KeyWithSymbolAndText">
                                                </controls:Key>


                                                <controls:Key Grid.Row="0" Grid.Column="4" 
                                                                      SymbolGeometry="{StaticResource MouseLeftClickIcon}"
                                                              Text="{x:Static resx:Resources.LEFT_DOUBLE_CLICK_SPLIT_WITH_NEWLINE}"
                                                              SharedSizeGroup="KeyWithSymbolAndText">
                                                    <controls:Key.Value>
                                                        <models:KeyValue FunctionKey="{x:Static enums:FunctionKeys.MouseLeftClick}" />
                                                    </controls:Key.Value>
                                                </controls:Key>

                                             

                                                <controls:Key Grid.Row="1" Grid.Column="4" Case="None" 
                                                              Text="1" SharedSizeGroup="KeyWithSingleLetter">
                                                    <controls:Key.Value>
                                                        <models:KeyValue String="1" />
                                                    </controls:Key.Value>
                                                </controls:Key>

                                                <controls:Key Grid.Row="2" Grid.Column="4" Case="None" 
                                                              Text="4" SharedSizeGroup="KeyWithSingleLetter">
                                                    <controls:Key.Value>
                                                        <models:KeyValue String="4" />
                                                    </controls:Key.Value>
                                                </controls:Key>

                                                <controls:Key Grid.Row="0" Grid.Column="5" 
                                                              SymbolGeometry="{StaticResource MouseRightClickIcon}"
                                                              Text="{x:Static resx:Resources.RIGHT_CLICK_SPLIT_WITH_NEWLINE}"
                                                              SharedSizeGroup="KeyWithSymbolAndText">
                                                    <controls:Key.Value>
                                                        <models:KeyValue FunctionKey="{x:Static enums:FunctionKeys.MouseRightClick}" />
                                                    </controls:Key.Value>
                                                </controls:Key>
                                                
                                                <controls:Key Grid.Row="1" Grid.Column="5" Case="None" 
                                                              Text="2" SharedSizeGroup="KeyWithSingleLetter">
                                                    <controls:Key.Value>
                                                        <models:KeyValue String="2" />
                                                    </controls:Key.Value>
                                                </controls:Key>

                                                <controls:Key Grid.Row="2" Grid.Column="5" Case="None" 
                                                              Text="5" SharedSizeGroup="KeyWithSingleLetter">
                                                    <controls:Key.Value>
                                                        <models:KeyValue String="5" />
                                                    </controls:Key.Value>
                                                </controls:Key>

                                                <controls:Key Grid.Row="0" Grid.Column="6"
                                                                      Text="{x:Static resx:Resources.ESC}"
                                                                      SharedSizeGroup="KeyWithText">
                                                    <controls:Key.Value>
                                                        <models:KeyValue FunctionKey="{x:Static enums:FunctionKeys.Escape}" />
                                                    </controls:Key.Value>
                                                </controls:Key>

                                                <controls:Key Grid.Row="1" Grid.Column="6" Case="None" 
                                                              Text="3" SharedSizeGroup="KeyWithSingleLetter">
                                                    <controls:Key.Value>
                                                        <models:KeyValue String="3" />
                                                    </controls:Key.Value>
                                                </controls:Key>

                                                <controls:Key Grid.Row="2" Grid.Column="6" Case="None" 
                                                              Text="6" SharedSizeGroup="KeyWithSingleLetter">
                                                    <controls:Key.Value>
                                                        <models:KeyValue String="6" />
                                                    </controls:Key.Value>
                                                </controls:Key>


                                                <controls:Key Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                                              SymbolGeometry="{StaticResource MouseMagneticCursorIcon}"
                                                              Text="{x:Static resx:Resources.MAGNETIC_CURSOR_SPLIT_WITH_NEWLINE}"
                                                              SharedSizeGroup="KeyWithSymbolAndText">
                                                    <controls:Key.Value>
                                                        <models:KeyValue FunctionKey="{x:Static enums:FunctionKeys.MouseMagneticCursor}" />
                                                    </controls:Key.Value>
                                                </controls:Key>

                                                <controls:Key Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="3"
                                                              SymbolGeometry="{StaticResource BackIcon}"
                                                              Text="{x:Static resx:Resources.BACK}"
                                                              SharedSizeGroup="KeyWithSymbolAndText">
                                                    <controls:Key.Value>
                                                        <models:KeyValue FunctionKey="{x:Static enums:FunctionKeys.BackFromKeyboard}" />
                                                    </controls:Key.Value>
                                                </controls:Key>
                                                
                                                

                                            </Grid>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Source={x:Static properties:Settings.Default}, Path=MainWindowState}" Value="Docked" />
                                                <Condition Binding="{Binding Source={x:Static properties:Settings.Default}, Path=MainWindowDockSize}" Value="Collapsed" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <!--Collapsed landscape dock view-->
                                                    <Grid>
                                                        <!-- TODO: Collapsed landscape dock view-->
                                                    </Grid>
                                                </Setter.Value>
                                            </Setter>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>
                    </Setter.Value>    
                </Setter>
                <Style.Triggers>
                    <DataTrigger Value="False">
                        <DataTrigger.Binding>
                            <MultiBinding Converter="{StaticResource WidthGreaterThanHeight}">
                                <MultiBinding.Bindings>
                                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType={x:Type controls:KeyboardHost}}" />
                                    <Binding Path="ActualHeight" RelativeSource="{RelativeSource AncestorType={x:Type controls:KeyboardHost}}" />
                                </MultiBinding.Bindings>
                            </MultiBinding>
                        </DataTrigger.Binding>
                        <Setter Property="Content">
                            <Setter.Value>
                                <!--Keyboard is portrait-->
                                <ContentControl>
                                    <ContentControl.Style>
                                        <Style TargetType ="{x:Type ContentControl}">
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <!--Normal portrait view-->
                                                    <Grid>
                                                        <!-- TODO: Portrait view too! -->
                                                    </Grid>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding Source={x:Static properties:Settings.Default}, Path=MainWindowState}" Value="Docked" />
                                                        <Condition Binding="{Binding Source={x:Static properties:Settings.Default}, Path=MainWindowDockSize}" Value="Collapsed" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Content">
                                                        <Setter.Value>
                                                            <!--Collapsed portrait dock view-->
                                                            <Grid>
                                                                <!-- TODO: Collapsed Portrait view too! -->

                                                            </Grid>
                                                        </Setter.Value>
                                                    </Setter>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>
                            </Setter.Value>    
                        </Setter>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ContentControl.Style>
    </ContentControl>
</controls:KeyboardView>
